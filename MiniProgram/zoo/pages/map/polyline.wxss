/* map.wxss */
.navi_map {
  width: 100%;
  height: 100vh;
}

/* 信息卡片 */
.info-card {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.info-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 控制按钮 */
.controls {
  position: fixed;
  top: 60rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}


.locate-btn {
  background: rgba(255, 255, 255, 0.9);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.locate-icon {
  width: 70rpx;
  height: 70rpx;
}