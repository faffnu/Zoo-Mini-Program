/* 抽屉样式 */
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.5);
}

.drawer_attr_box {
  width: 100%;
  height: 70%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.drawer_content {
  padding: 30rpx;
  height: 100%;
}

.stock_jiajian {
  display: flex;
  align-items: center;
}

.stockBox {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #ddd;
}

.nums {
  width: 80rpx;
  border-left: none;
  border-right: none;
}

.stockinnum {
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.totalprice {
  text-align: right;
  padding: 20rpx;
  font-size: 32rpx;
  color: #e64340;
  font-weight: bold;
}

/* 价格显示区域 */
.price-display {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  margin-top: 20rpx;
}

.original-price {
  text-decoration: line-through;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.discount-price {
  font-size: 36rpx;
  color: #e64340;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.discount-amount {
  color: #09bb07;
  font-size: 28rpx;
}

/* 优惠券模态框样式 */
.voucher-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2000;
}

.voucher-modal-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.voucher-modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.voucher-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.voucher-list {
  flex: 1;
  overflow-y: auto;
  padding: 0 30rpx;
}

.voucher-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.voucher-info {
  flex: 1;
}

.voucher-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.voucher-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.voucher-validity {
  font-size: 24rpx;
  color: #999;
}

.voucher-select {
  margin-left: 20rpx;
}

.no-voucher {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

.voucher-modal-footer {
  display: flex;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.voucher-modal-footer button {
  flex: 1;
  margin: 0 10rpx;
}