/* pages/subPages/voucher/voucher.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  height: 90rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #e54847;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #e54847;
  border-radius: 3rpx;
}

/* 筛选选项卡 */
.filter-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.filter-tab.active {
  color: #e54847;
  position: relative;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #e54847;
  border-radius: 2rpx;
}

/* 优惠券列表 */
.voucher-list {
  padding: 20rpx;
}

/* 优惠券卡片 */
.voucher-card {
  display: flex;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.voucher-left {
  width: 240rpx;
  background: linear-gradient(135deg, #ff6b6b, #e54847);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: relative;
}

.voucher-left::after {
  content: '';
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.voucher-right {
  flex: 1;
  background: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 优惠券值 */
.voucher-value {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 36rpx;
  margin-right: 4rpx;
}

.number {
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
}

.unit {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.voucher-condition {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.voucher-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.voucher-time {
  font-size: 24rpx;
  color: #999;
}

.voucher-action {
  text-align: right;
}

.receive-btn {
  display: inline-block;
  background: #e54847;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin: 0;
}

.receive-btn::after {
  border: none;
}

.diabled-btn {
  display: inline-block;
  background: #979292;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin: 0;
}

.voucher-status {
  font-size: 24rpx;
  color: #e54847;
}

.voucher-get-time {
  font-size: 22rpx;
  color: #999;
}

/* 已使用和已过期状态 */
.voucher-card.used .voucher-left,
.voucher-card.expired .voucher-left {
  background: linear-gradient(135deg, #cccccc, #999999);
}

.voucher-card.used .voucher-status,
.voucher-card.expired .voucher-status {
  color: #999;
}

/* 状态角标 */
.status-mark {
  position: absolute;
  right: 0;
  top: 0;
  background: #999;
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 12rpx;
}

.voucher-card.used .status-mark {
  background: #999;
}

.voucher-card.expired .status-mark {
  background: #cccccc;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}