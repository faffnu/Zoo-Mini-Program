/* pages/subPages/activity/detail/detail.wxss */
.activity-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.activity-image {
  width: 100%;
  margin-bottom: 20rpx;
}

.activity-info {
  width: 100%;
  max-width: 600px;
  text-align: center;
  display: flex;
  flex-direction: column;
}


.activity-date {
  font-size: 14px;
  color: #999;
  margin-bottom: 10px;
  margin-top: 100rpx;
  text-align: start;
}

.activity-content {
  margin-top: 20px;
  font-size: 16px;
  line-height: 1.5;
  color: #333;
  text-align: left;
}