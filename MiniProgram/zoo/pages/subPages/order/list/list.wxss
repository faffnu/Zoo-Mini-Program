/* pages/subPages/order/list/list.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 导航栏样式 */
.nav-scroll {
  height: 88rpx;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  white-space: nowrap;
}

.nav-list {
  display: inline-flex;
  height: 100%;
  padding: 0 20rpx;
}

.nav-item {
  position: relative;
  padding: 0 30rpx;
  height: 100%;
  display: inline-flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.nav-item.active {
  color: #e02e24;
  font-weight: 500;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #e02e24;
  border-radius: 2rpx;
}

/* 订单卡片样式 */
.order-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
}


.order-body {
  margin-bottom: 24rpx;
}

.product-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.ticket-name {
  font-size: 30rpx;
  color: #333;
  max-width: 500rpx;
}

.quantity {
  font-size: 28rpx;
  color: #666;
}

.time-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.create-time,
.use-date {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.total-price {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}


.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.primary {
  background: #e02e24;
  color: white;
}

.default {
  border: 1rpx solid #ddd;
  color: #666;
}

/* 空状态 */
.empty-wrapper {
  padding: 100rpx 0;
  align-items: center;
  flex-direction: column;
  display: flex;
}

.empty-img {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 添加倒计时相关样式 */
.status-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.countdown {
  font-size: 12px;
  color: #ff4d4f;
  margin-top: 0px;
}