/* pages/subPages/order/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.label {
  color: #666;
}

.value {
  color: #333;
}

.price {
  color: #e4393c;
  font-weight: bold;
}

.state-active {
  color: #09bb07;
}

.state-inactive {
  color: #999;
}

.qrcode-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.qrcode-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.qrcode-check {
  background-color: skyblue;
  color: white;
  border: none;
  padding: 0px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 20px;
  cursor: pointer;
  border-radius: 5px;
  transition: background-color 0.3s;
}