/* pages/subPages/comment/detail/comment.wxss */
.container {
  padding: 20px;
}

.average-rating {
  font-size: 23px;
  font-weight: bold;
  margin-bottom: 20px;
  padding: 10px;
}

.rating {
  margin-left: 20px;
}

/* 外层容器 */
.sort-options {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 40px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

/* 滑块样式 */
.slider {
  position: absolute;
  bottom: 0;
  width: 40%;
  /* 滑块宽度为选项的一半 */
  height: 2px;
  background-color: #007bff;
  /* 滑块颜色 */
  transition: transform 0.3s ease-in-out;
  /* 添加平滑过渡效果 */
}

/* 排序选项样式 */
.sort-item {
  font-size: 14px;
  color: #666;
  text-align: center;
  flex: 1;
}

/* 当前选中的选项 */
.sort-item.active {
  color: #007bff;
  font-weight: bold;
}



.comment-item {
  align-items: flex-start;
  padding: 5px 0;
  border-bottom: 3px solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  border-radius: 50rpx;
}

.comment-info {
  display: flex;

}

.nickname {
  font-weight: bold;
  margin-right: 20rpx;
}

.star {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.time {
  font-size: 12px;
  color: #999;

}

.nick {
  display: flex;
}

.content {
  margin-top: 10px;
}

.comment-img,
.comment-video {
  margin-top: 10rpx;
  max-width: 40%;
  display: block;
}

.approve-count {
  margin-top: 10px;
  display: flex;
  justify-content: flex-end;
}

.approve {
  width: 50rpx;
  height: 50rpx;
}