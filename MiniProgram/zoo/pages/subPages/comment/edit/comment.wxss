/* pages/comment/comment.wxss */
.stars {
  padding: 85rpx 0 60rpx 273rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #ececec;
  background-color: #fff;
}

.stars .avatar {
  width: 190rpx;
  height: 190rpx;
  border: 1rpx solid #000;
  position: absolute;
  top: 41rpx;
  left: 36rpx;
}

.stars .content view {
  font-size: 32rpx;
  color: #4a4a4a;
}

.stars .content>view:last-of-type {
  height: 40rpx;
  margin-top: 48rpx;
}

.stars .content>view:last-of-type image {
  float: left;
  width: 42rpx;
  height: 42rpx;
  margin-right: 25rpx;
  background-size: 100% 100%;
}

.reviews {
  width: 90%;
  align-self: center;
  margin-top: 20rpx;
}

.media-upload {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.upload-btn {
  height: 160rpx;
  border: 2rpx dashed #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
}

.tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.preview-container {
  position: relative;
  margin-top: 20rpx;
}

.preview-container image,
.preview-container video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4444;
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 36rpx;
}

.btn {
  height: 90rpx;
  width: 150rpx;
  font-size: 35rpx;
  margin-top: 10rpx;
  background-color: skyblue;
  border-radius: 30rpx;
}