.container {
  padding-top: 1%;
}


.banner {
  width: 100%;
  height: 300rpx;
}

.notice {
  width: 90%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0rpx;
  background: #fff;
  margin-left: 20rpx;
}

.notice-swiper {
  width: 100%;
  height: 50rpx;
  margin-left: 10%;
}

.swiper-text {
  padding: 20rpx;
  box-sizing: border-box;
}

.section-title {
  margin-left: 20rpx;
}

.tickets {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  padding-left: 0;
  margin-left: 0;
}

.ticket {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}

.price {
  color: #EEB422;
}

.animals-container {
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
}

.scroll-view {
  width: 100%;
  display: flex;
  white-space: nowrap;
}

.animal-item {
  display: inline-block;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  text-align: center;
}

.pic {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 10rpx;
}

.animal-name {
  width: 100px;
  font-size: 14px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.activity-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.activity-image {
  height: 100px;
  width: 100px;
  object-fit: cover;
  margin-right: 15px;
}

.activity-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.activity-introduce {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.activity-time {
  font-size: 12px;
  color: #999;
}



.title-item {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.title-item .title {
  margin-left: 20rpx;
  font-size: 34rpx;
}

.title-item .view-all-btn {
  display: flex;
  font-size: 32rpx;
  cursor: pointer;
  color: green;
  margin-left: 450rpx;
}

.comment-item {
  align-items: flex-start;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10px 0;
  border-bottom: 3px solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 50px;
  height: 50px;
  margin-right: 10px;
  border-radius: 50rpx;
}

.comment-info {
  display: flex;

}

.nickname {
  font-weight: bold;
  margin-right: 20rpx;
}

.star {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.time {
  font-size: 12px;
  color: #999;

}

.nick {
  display: flex;
}

.content {
  margin-top: 10px;
}

.comment-img,
.comment-video {
  margin-top: 10rpx;
  max-width: 40%;
  display: block;
}

.approve-count {
  margin-top: 10px;
  display: flex;
  justify-content: flex-end;
}

.approve {
  width: 50rpx;
  height: 50rpx;
}