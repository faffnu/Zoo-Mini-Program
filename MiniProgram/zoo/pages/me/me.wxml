<view class='container'>
  <view class='header'>
    <image class="avatar" src="{{avatarUrl}}" wx:if="{{!hasUserInfo}}"></image>
    <open-data type="userAvatarUrl" class='avatar' wx:else></open-data>
    <button class="name" bindtap="login" wx:if="{{!hasUserInfo}}">
      {{username}}
    </button>
    <open-data type="userNickName" class='name' bindtap="userDetail" wx:else>
    </open-data>
  </view>
  <view class='order' wx:if="{{hasUserInfo}}">
    <view class='title-box'>
      <view class='title'>我的订单</view>
      <view class='view-all' bindtap='viewAllOrders'>查看全部</view>
    </view>
    <view class='order-list'>
      <view class='order-item' data-status='待支付' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/pay.png' mode='aspectFit'></image>
        <view class='order-detail'>待支付</view>
      </view>
      <view class='order-item' data-status='待使用' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/use.png' mode='aspectFit'></image>
        <view class='order-detail'>待使用</view>
      </view>
      <view class='order-item' data-status='待评价' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/comment.png' mode='aspectFit'></image>
        <view class='order-detail'>待评价</view>
      </view>
      <view class='order-item' data-status='已完成' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/finish.png' mode='aspectFit'></image>
        <view class='order-detail'>已完成</view>
      </view>
      <view class='order-item' data-status='已取消' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/cancel.png' mode='aspectFit'></image>
        <view class='order-detail'>已取消</view>
      </view>
      <view class='order-item' data-status='已退款' bindtap='navigateToFilteredOrders'>
        <image class='status-icon' src='/images/refund.png' mode='aspectFit'></image>
        <view class='order-detail'>已退款</view>
      </view>
    </view>
  </view>
  <view class='other'>
    <view class='about other-item' id="about" wx:if="{{hasUserInfo}}">
      <navigator class="nav" url='/pages/subPages/voucher/voucher' hover-class='none'>
        <image class='iconfont' src="/images/voucher.png"></image> 优惠券
      </navigator>
    </view>
    <view class='about other-item' id="about" wx:if="{{hasUserInfo}}">
      <navigator class="nav" url='/pages/subPages/look/look' hover-class='none'>
        <image class='iconfont' src="/images/look.png"></image> 浏览记录
      </navigator>
    </view>
    <view class='about other-item' id="about" wx:if="{{hasUserInfo}}">
      <navigator class="nav" url='/pages/subPages/favor/favor' hover-class='none'>
        <image class='iconfont' src="/images/favor.png"></image> 我的收藏
      </navigator>
    </view>
    <view class='customer other-item'>
      <button open-type='contact' class='btn' hover-class='none'>
        <image class='iconfont' src="/images/chat1.png"></image> 客服反馈
      </button>
    </view>

  </view>




</view>