/* pages/me/me.wxss */
.container {
  background: #f3f3f3;
  padding-top: 0;
  height: 670px;
  display: flex;
  justify-content: flex-start;
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: 100% 300rpx;
  height: 300rpx;
  overflow: hidden;
  text-align: center;
}

.header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 3px solid #fff;
  overflow: hidden;
}

.header .name {
  height: 45rpx;
  margin-top: 14rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  background: none;
  color: #333;
}

.header .name::after {
  border: none
}

.user-detail{
  font-size:30rpx;
  display:flex;
  
}

.order {
  margin-top: 0rpx;
  margin-bottom: 10rpx;
  background: #fff;
  height: 220rpx;
  padding: 26rpx 30rpx 0;
  width: 90%;
}

.order .title-box {
  display: flex;
  align-items: flex-end;
  margin-bottom: 16px;
  width: 100%;
  height: 42rpx;
  margin: 0 auto;
}

.order .title {
  position: relative;
  height: 42rpx;
  width: 160rpx;
  margin: 0 auto;
  left: 56rpx;
  font-size: 32rpx;
  line-height: 42rpx;
  color: #333;
  text-align: center;
  background: #fff;
  z-index: 9;
}

.view-all {
  display: flex;
  /* float: right; */
  font-size: 14px;
  color: #1aad19;
  cursor: pointer;
}

.order-list {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.order-item {
  width: 100rpx;
}

.order-item .order-detail {
  font-size: 30rpx;
  width: 90rpx;
}

.order-item .status-icon {
  width: 84rpx;
  height: 84rpx;
  margin-bottom: 6rpx;
}





.other {
  background: #fff;
  width: 98%;
}

.other-item {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
}

.other-item::after {
  position: absolute;
  right: 30rpx;
  top: 50%;
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  transform: translateY(-50%) rotate(135deg);
}

/* 覆盖按钮的默认样式 */
.other .btn {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 0;
  border: none;
  border-radius: 0;
  margin: 0;
  font-size: 1em;
  position: relative;
  color: #333;
  text-align: left;
  background: #fff;
}

.other .btn::after {
  content: none;
}

.iconfont {
  width: 25px;
  height: 25px;
  margin-right: 20px;
}



#about {
  display: flex;
  align-items: center;
}

#about .nav {
  height: 100%;
  display: flex;
  align-items: center;
}